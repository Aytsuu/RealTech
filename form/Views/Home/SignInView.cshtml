
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RealTech | Sign In</title>
    <link href="~/StyleSheet1.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="header2">
            <a href="https://localhost:44352/Home/CustomerView">RealTech</a>
        </div>
        <div class="main-container">
            <div class="signIn-container">
                <h2 id="label">SIGN IN</h2>
                <div class="input-fields">
                    <input type="text" id="username" placeholder="Username, Email, Mobile No...." onkeyup="returnBorderColor()"/>
                    <input type="password" id="password" placeholder="Password (6-20 Characters)" onkeyup="returnBorderColor()"/>
                </div>
                <a href="https://localhost:44352/Home/ForgotPassword" class="forgot-pass">Forgot password?</a>
                <button class="sign-in">Sign in</button>
                <div class="bottom-link">
                    <label>Don't have an account?</label>
                    <a href="https://localhost:44352/Home/SignUpView">Create one!</a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery/jquery-3.7.1.js"></script>
    <script src="~/Scripts/signInScript.js"></script>
</body>
</html>
