
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RealTech | Create Profile</title>
    <link href="~/StyleSheet1.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery/jquery-3.7.1.js"></script>
    <script src="~/Scripts/createProfileScript.js"></script>
</head>
<body>
    <div>
        <div class="header2">
            <a id="home">RealTech</a>
        </div>
        <div class="main-container">
            <div class="cp-container">
                <h1>Create Profile</h1>
                <form id="form-data" method="post" action="../home/CreateProfile" enctype="multipart/form-data">
                    <input type="text" id="username" name="username" readonly />
                    <div class="cp-fields">
                        <div class="inputFields">
                            <label>First Name</label>
                            <input type="text" name="fname" placeholder="Your first name" required />
                        </div>
                        <div class="inputFields">
                            <label>Last Name</label>
                            <input type="text" name="lname" placeholder="Your last name" required />
                        </div>
                        <div class="inputFields">
                            <label>Date of Birth</label>
                            <input type="date" name="dateofbirth" required />
                        </div>
                        <div class="inputFields">
                            <label>Sex</label>
                            <select name="sex" required>
                                <option value="">Select</option>
                                <option value="MALE">Male</option>
                                <option value="FEMALE">Female</option>
                            </select>
                        </div>
                        <div class="inputFields">
                            <label>Status</label>
                            <select name="status" required>
                                <option value="">Select</option>
                                <option value="SINGLE">Single</option>
                                <option value="MARRIED">Married</option>
                            </select>
                        </div>
                        <div class="inputFields">
                            <label>State</label>
                            <input type="text" name="state" placeholder="Your current state" required />
                        </div>
                        <div class="inputFields">
                            <label>City</label>
                            <input type="text" name="city" placeholder="Your current city" required />
                        </div>
                        <div class="inputFields">
                            <label>Home Address</label>
                            <input type="text" name="homeAdd" placeholder="Your current home address" required />
                        </div>
                        <div class="inputFields">
                            <label>Postal / Zip Code</label>
                            <input type="text" name="postal" placeholder="Your postal / zip code" required />
                        </div>
                    </div>
                    <button id="finish">Finish <i class="fa-solid fa-circle-chevron-right"></i></button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
